<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:id="@+id/cvItem"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:id="@+id/tvOrder"
                    tools:text="Servicio de mantenimiento"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvStatus"
                    android:layout_marginEnd="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatus"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    tools:text="No asignado"
                    android:background="@drawable/fondo_redondo"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="15dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Orden:"
                    android:textSize="17sp"
                    android:textColor="@color/gris"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Inicio:"
                    android:textSize="17sp"
                    android:textColor="@color/gris"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="00S000053490"
                    android:id="@+id/tvIdOrder"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/letrasGris"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="06:23PM"
                    android:id="@+id/tvHorTime"
                    android:textSize="17sp"
                    android:textColor="@color/letrasGris"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modelo:"
                    android:textSize="17sp"
                    android:textColor="@color/gris"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Placas:"
                    android:textSize="17sp"
                    android:textColor="@color/gris"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="JETTA CLASICO/SPORT"
                    android:id="@+id/tvModel"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/letrasGris"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="TYG5232"
                    android:id="@+id/tvPlacas"
                    android:textSize="17sp"
                    android:textColor="@color/letrasGris" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/fondo_pyramid"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/ivCono"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cono" />

                <TextView
                    android:id="@+id/tvColorPyramid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@id/ivCono"
                    android:textColor="@color/negro"
                    android:textSize="18sp"
                    tools:text="AMARILLO" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vSepPyra"
                    android:layout_alignTop="@+id/tvColorPyramid"
                    android:layout_alignBottom="@+id/tvColorPyramid"
                    android:layout_toEndOf="@+id/tvColorPyramid"
                    android:layout_marginEnd="5dp"
                    android:background="@color/gris"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPyramidOrd"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/vSepPyra"
                    android:textColor="@color/negro"
                    android:textSize="18sp"
                    tools:text="173" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>